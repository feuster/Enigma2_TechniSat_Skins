<skin>
	<!-- CAM selection menu (VTi) -->
	<screen name="CamSelectMenu" position="center,center" size="1920,1080" title="VTI CAM Setup" backgroundColor="transparent" flags="wfNoBorder">
		<!-- Main form -->
		<constant-widget name="mainmenu_bg" />
		<constant-widget name="mainmenu_pig" />
		<constant-widget name="icon_plugins" />
		<constant-widget name="icon_bigplugins" />
		<constant-widget name="clock2" />
		<!-- Title -->
		<eLabel text="VTI CAM Setup" position="225,68" size="1000,160" zPosition="1" font="Regular;60" backgroundColor="black" transparent="1" />
		<!-- Buttons -->
		<constant-widget name="all_buttons_2" />
		<!-- CAM selection menu (VTi) -->
		<widget source="list" render="Listbox" position="540,170" size="1222,745" zPosition="1" itemHeight="60" font="Regular;42" scrollbarMode="showOnDemand" scrollbarWidth="35" scrollbarSliderBorderWidth="0" scrollbarSliderForegroundColor="scolor2" scrollbarSliderBorderColor="scolor2" scrollbarBackgroundPicture="TechniSat_1/menu/mainmenu_scrollbar_bg_arrows_745px.png" selectionPixmap="TechniSat_1/menu/selection_1222x60px.png" transparent="1" >
			<convert type="TemplatedMultiContent">
				{"template": [
							MultiContentEntryText(pos = (30, 0), size = (1100, 60), font=0, flags = RT_HALIGN_LEFT|RT_VALIGN_CENTER, text = 0),
							MultiContentEntryPixmapAlphaTest(pos = (1, 18), size = (24, 24), png = 2) # index 4 is the status pixmap
					],
				"fonts": [gFont("Regular", 56),gFont("Regular", 24)],
				"itemHeight": 60
				}
			</convert>
		</widget>
	</screen>
</skin>